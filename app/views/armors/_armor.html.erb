<li class="armor" id="armor-<%= armor.id %>">
  <span class="name"><%= armor.name %></span>
  <span class="type"><%= armor.type %></span>
  <span class="hsp"><%= armor.hsp %></span>
  <span class="tsp"><%= armor.tsp %></span>
  <span class="lasp"><%= armor.lasp %></span>
  <span class="llsp"><%= armor.llsp %></span>
  <span class="ev"><%= armor.ev %></span>
  <span class="cost"><%= armor.cost %></span>
  <span class="action">
    <% if armor.is_a?(ArmorBlueprint) %>
      <%= link_to "add", character_armors_path(@character, armor_blueprint_id: armor.id.to_s), class: "add-armor", method: :post, remote: true %>
    <% elsif can_edit?(armor.character) %>
        <%= link_to "remove", character_armor_path(armor.character, armor), method: :delete, remote: true %>
    <% end %>
  </span>
  <div class="clear"></div>
</li>
