<h1>New Character</h1>

<%= simple_form_for @character, url: new_character_path, method: :get do |f| %>
  <%= f.input :role_id, label: "Chose Role", collection: Role.all.entries.sort_by(&:name_with_parent), label_method: :name_with_parent, include_blank: false, wrapper_html: { class: "stomp" } %>
  <%= f.button :submit, "Continue..." %>
<% end %>
