<!DOCTYPE html>
<html>
<head>
  <title>Cyberpunk.NET</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% %I[notice alert].each do |message| %>
    <div class="flash-message <%= message %> <%= 'hidden' if flash[message].blank? %>">
      <%= flash[message] %>
    </div>
  <% end %>
  <% if user_signed_in? %>
    <div class="header">
      <div class="user-info">
        Signed in as <strong><%= current_user.name %></strong>
        <% if current_campaign %> using the <strong><%= current_campaign.name %></strong> campaign <% end %>
        | <%= link_to "Characters", characters_path %>
        | <%= link_to "Members", memberships_path %>
        | <%= link_to "Manage Campaigns", campaigns_path %>
        |Â <%= link_to "Sign Out", session_path, method: :delete %>
      </div>
    </div>
  <% end %>
  <div class="content">
    <%= yield %>
  </div>
</body>
</html>
